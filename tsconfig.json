{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es5",
            "es2015"
        ],
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "removeComments": true
    },
    "include": [
        "lib/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules/",
        "test/expected_file/**/*.d.ts"
    ]
}
